fun main() {
    val age = 5 * 365
    val name = "Roger"
    println("Happy birthday, ${name}!")
    println("")
    // Let's print a cake!
    println("   ,,,,,   ")
    println("   |||||   ")
    println(" =========")
    println("@@@@@@@@@@@")
    println("{~@~@~@~@~}")
    println("@@@@@@@@@@@")
    
    // This prints an empty line.
    println("")
    println("You are already ${age} days old, ${name}!")
    println("${age} days old is the best age ever!")
}
